{% extends 'base.html.twig' %}

{% block title %}登陆{% endblock %}

{% block head %}
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="readshare">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
{% endblock %}

{% block body %}
    <div class="ui middle aligned center aligned grid">
        <div class="column">
            <h2 class="ui teal image header">
                <img src="/pic/logo.png" class="image">
                <div class="content">
                    Log-in to your account
                </div>
            </h2>
            <form class="ui form" method="post">
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="_username" value="{{ last_username }}">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="_password" placeholder="Password">
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="ui fluid large teal submit button" onclick="db()" style="margin-bottom: 5px;">Login</div>
                    <a href="{{ path('register') }}"><div class="ui fluid large teal button" >Sign Up</div></a>
                </div>
                <div class="ui error message">
                </div>
            </form>

            <div class="ui message">
                New to us? <a href="#">Sign Up</a>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/semantic.min.css">
    <style type="text/css">
        body {
            background-color: #DADADA;
        }
        body > .grid {
            height: 100%;
        }
        .image {
            margin-top: -100px;
        }
        .column {
            max-width: 450px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="/js/semantic.min.js"></script>
    <script src="/js/check.js"></script>
    <script>
        window.onload = function () {
            {% if error %}
            alert("{{ error.messageKey|trans(error.messageData, 'security') }}")
            {% endif %}
        }
    </script>
{% endblock %}
